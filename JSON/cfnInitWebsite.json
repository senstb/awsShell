{

  "AWSTemplateFormatVersion" : "2010-09-09",

  "Description" : "Template for generating Wordpress site using custom AMI",


  "Parameters" : {

    "InstanceType" : {

      "Description" : "WebServer EC2 instance type",

      "Type" : "String",

      "Default" : "t2.micro",

      "AllowedValues" : [ "t2.micro","t2.medium","t1.micro"],

      "ConstraintDescription" : "must be a valid EC2 instance type."

    },

    "KeyName": {

      "Description" : "Name of an existing EC2 KeyPair to enable SSH access to the web server",

      "Type": "String",

      "ConstraintDescription" : "can contain only ASCII characters."

    },

    "InstanceImage" : {
      "Description" : "Image ID from AMI you wish to use in the instance",

      "Type" : "String",

      "Default" : "ami-0d002da8459435c0f"

    },

    "myVPC" : {
      "Description" : "VPC ID for where you wish to host your website",

      "Type" : "String",

      "Default" : "vpc-ad72b5d5"

    },

    "myCidr" : {
      "Description" : "CIDR Block where you will SSH onto your instance from",

      "Type" : "String",

      "Default" : "0.0.0.0/0"

    }

  },

  "Mappings" : {

    "AWSInstanceType2Arch" : {

      "t2.micro"    : { "Arch" : "64" },

      "t2.medium"   : { "Arch" : "64" },

      "t1.micro"    : { "Arch" : "64" }

    },


    "AWSRegionArch2AMI" : {

      "us-east-1"      : { "32" : "ami-31814f58", "64" : "ami-1b814f72", "64HVM" : "ami-0da96764" },

      "us-west-2"      : { "32" : "ami-38fe7308", "64" : "ami-a9d09ed1", "64HVM" : "NOT_YET_SUPPORTED" }

    }

  },


  "Resources" : {

    "Ec2Instance" : {

      "Type" : "AWS::EC2::Instance",

      "Properties" : {

        "ImageId" : { "Ref" : "InstanceImage"},

        "KeyName" : { "Ref" : "KeyName" },

        "InstanceType" : { "Ref" : "InstanceType" },

        "SecurityGroupIds" : [{ "Ref" : "InstanceSecurityGroup" }],
        "Metadata" : {
            "AWS::CloudFormation::Init" : {
            "config" : {
              "commands" : {
                "update" : {
                  "command" : "sudo yum update -y"
                }
              },
              "packages" : {
                "yum" : {
                  "httpd" : [],
                  "php" : [],
                  "wordpress" : []
                }
              }
            }
          }
        }
      }
    },

  "InstanceSecurityGroup" : {
     "Type" : "AWS::EC2::SecurityGroup",
     "Properties" : {
        "GroupDescription" : "Allow http to client host",
        "VpcId" : {"Ref" : "myVPC"},
        "SecurityGroupIngress" : [{
              "IpProtocol" : "tcp",
              "FromPort" : 80,
              "ToPort" : 80,
              "CidrIp" : "0.0.0.0/0"
           },
           {
              "IpProtocol" : "tcp",
              "FromPort" : 22,
              "ToPort" : 22,
              "CidrIp" : {"Ref": "myCidr"}
           }],
        "SecurityGroupEgress" : [{
           "IpProtocol" : "tcp",
           "FromPort" : 0,
           "ToPort" : 65535,
           "CidrIp" : "0.0.0.0/0"
           }]
      }
  },

  "elasticIP" : {
   "Type": "AWS::EC2::EIPAssociation",
   "Properties": {
      "AllocationId": "eipalloc-02fc43bb6c0349247",
      "InstanceId": { "Ref" : "Ec2Instance"}
   }
  }
 }
}
