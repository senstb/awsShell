{

  "AWSTemplateFormatVersion" : "2010-09-09",



  "Description" : "Template for generating Wordpress site using custom AMI",


  "Parameters" : {

    "InstanceType" : {

      "Description" : "WebServer EC2 instance type",

      "Type" : "String",

      "Default" : "t2.micro",

      "AllowedValues" : [ "t2.micro","t2.medium","t1.micro"],

      "ConstraintDescription" : "must be a valid EC2 instance type."

    },



    "KeyName": {

      "Description" : "Name of an existing EC2 KeyPair to enable SSH access to the web server",

      "Type": "String",

      "MinLength": "1",

      "MaxLength": "255",

      "AllowedPattern" : "[\\x20-\\x7E]*",

      "ConstraintDescription" : "can contain only ASCII characters."

    },

    "InstanceImage" : {
      "Description" : "Image ID from AMI you wish to use in the instance",

      "Type" : "String",

      "Default" : "ami-0d002da8459435c0f"

    },

    "myVPC" : {
      "Description" : "VPC ID for where you wish to host your website",

      "Type" : "String",

      "Default" : "vpc-ad72b5d5"

    }

  },

  "Mappings" : {

    "AWSInstanceType2Arch" : {

      "t2.micro"    : { "Arch" : "64" },

      "t2.medium"   : { "Arch" : "64" },

      "t1.micro"    : { "Arch" : "64" }

    },



    "AWSRegionArch2AMI" : {

      "us-east-1"      : { "32" : "ami-31814f58", "64" : "ami-1b814f72", "64HVM" : "ami-0da96764" },

      "us-west-2"      : { "32" : "ami-38fe7308", "64" : "ami-a9d09ed1", "64HVM" : "NOT_YET_SUPPORTED" },

      "us-west-1"      : { "32" : "ami-11d68a54", "64" : "ami-1bd68a5e", "64HVM" : "NOT_YET_SUPPORTED" },

      "eu-west-1"      : { "32" : "ami-973b06e3", "64" : "ami-953b06e1", "64HVM" : "NOT_YET_SUPPORTED" },

      "ap-southeast-1" : { "32" : "ami-b4b0cae6", "64" : "ami-beb0caec", "64HVM" : "NOT_YET_SUPPORTED" },

      "ap-southeast-2" : { "32" : "ami-b3990e89", "64" : "ami-bd990e87", "64HVM" : "NOT_YET_SUPPORTED" },

      "ap-northeast-1" : { "32" : "ami-0644f007", "64" : "ami-0a44f00b", "64HVM" : "NOT_YET_SUPPORTED" },

      "sa-east-1"      : { "32" : "ami-3e3be423", "64" : "ami-3c3be421", "64HVM" : "NOT_YET_SUPPORTED" }

    }

  },



  "Resources" : {

    "Ec2Instance" : {

      "Type" : "AWS::EC2::Instance",

      "Properties" : {

        "ImageId" : { "Ref" : "InstanceImage"},

        "KeyName" : { "Ref" : "KeyName" },

        "InstanceType" : { "Ref" : "InstanceType" },

        "SecurityGroupIds" : [{ "Ref" : "InstanceSecurityGroup" }]

      }

    },

  "InstanceSecurityGroup" : {
     "Type" : "AWS::EC2::SecurityGroup",
     "Properties" : {
        "GroupDescription" : "Allow http to client host",
        "VpcId" : {"Ref" : "myVPC"},
        "SecurityGroupIngress" : [{
              "IpProtocol" : "tcp",
              "FromPort" : 80,
              "ToPort" : 80,
              "CidrIp" : "0.0.0.0/0"
           },
           {
              "IpProtocol" : "tcp",
              "FromPort" : 22,
              "ToPort" : 22,
              "CidrIp" : "0.0.0.0/0"
           }],
        "SecurityGroupEgress" : [{
           "IpProtocol" : "tcp",
           "FromPort" : 0,
           "ToPort" : 65535,
           "CidrIp" : "0.0.0.0/0"
           }]
      }
      }
   }
}
